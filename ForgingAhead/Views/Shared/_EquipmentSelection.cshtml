@model CharacterEditViewModel

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Equipment Item</th>
            <th>Selected</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SelectedEquipment.Keys.Count() != 0)
        {
            @foreach (var kvp in Model.SelectedEquipment)
            {
            <tr>
                <td>@kvp.Key</td>
                <td>@Html.CheckBoxFor(m => m.SelectedEquipment[kvp.Key])</td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No equipment available to select</td>
            </tr>
        }
    </tbody>
</table>